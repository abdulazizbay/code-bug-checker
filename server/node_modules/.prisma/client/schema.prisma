datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String          @id @default(cuid())
  email     String          @unique
  name      String?
  githubId  String?
  prompts   PromptHistory[]
  createdAt DateTime        @default(now())
}

model PromptHistory {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  prompt     String   @db.Text
  aiResponse Json
  createdAt  DateTime @default(now())
}
